<%layout('/layouts/main')%> 
<div class="col-4 offset-1" novalidate class="validation-form">
    <form action="/article" method="POST">
        <div class="mb-3">
        <label for="title" class="form-label">Enter Title</label> 
        <input type="text" class="form-control" name="title" id="title" required> 
        <div class="valid-feedback">looks good</div>
       </div>
       <div class="mb-3">
        <label for="URL"class="form-label">Enter Link</label>
            <input type="url" class="form-control" name="link" id="URL" required>
            <div class="valid-feedback">looks good</div>
          </div>
          <div class="mb-3">
            <label for="des" class="form-label">Enter Description</label>
                <textarea name="Description" id="des" cols="60" rows="5"></textarea>
                <div class="valid-feedback">looks good</div>
              </div>  
        <button class="btn btn-outline-success">submit</button>
      </div>  
    </form>
    </div>
